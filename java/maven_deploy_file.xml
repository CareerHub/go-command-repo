<!--
name: maven deploy file
description: Installs a single artifact in the remote repository.
author: Go Team
authorinfo: http://support.thoughtworks.com/categories/20002778-go-community-support
moreinfo: http://maven.apache.org/plugins/maven-deploy-plugin/deploy-file-mojo.html
keywords: mvn, maven, deploy
-->
<exec command="mvn">
  <arg>deploy:deploy-file</arg>
  <arg>-Durl=http://my.maven.repo.url</arg>
  <arg>-DrepositoryId=repo.server.id</arg>
  <arg>-Dfile=my-artifact-1.0.jar</arg>
</exec>
