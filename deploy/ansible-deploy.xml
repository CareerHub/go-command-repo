<exec command="ansible">
<arg>webservers</arg>
<arg>-m</arg>
<arg>git</arg>
<arg>-a</arg>
<arg>"repo=git://foo.example.org/repo.git dest=/srv/myapp version=HEAD"</arg>
</exec>